@using MoonCycle.Utils
@using MoonCycle.Enums

<img src="Images/@(MoonIconName).svg" height="100" width="100" />

@code {
	[Parameter]
	public MoonPhase MoonPhase{ get; set; }

	public string MoonIconName{ get; set; } =  "";

	protected override void OnInitialized()
	{
		MoonIconName = MoonphaseUtils.GetMoonPhaseIcon(MoonPhase);
	}

	protected override void OnParametersSet()
	{
		MoonIconName = MoonphaseUtils.GetMoonPhaseIcon(MoonPhase);
	}
}
